{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Theme Selector Configuration",
  "description": "Configuration file for theme-selector tool",
  "type": "object",
  "required": ["sources", "apps"],
  "properties": {
    "sources": {
      "type": "array",
      "description": "List of source directories where app configurations are stored",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "apps": {
      "type": "array",
      "description": "List of applications to theme",
      "items": {
        "type": "object",
        "required": ["name", "template", "target", "format"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Application name (used as subdirectory name)"
          },
          "template": {
            "type": "string",
            "description": "Path to the template file"
          },
          "target": {
            "type": "string",
            "description": "Target file path where the generated theme will be linked"
          },
          "format": {
            "type": "string",
            "description": "Output file format extension (e.g., 'css', 'conf')"
          },
          "sudo": {
            "type": "boolean",
            "description": "Whether to use sudo when applying the theme"
          }
        }
      },
      "minItems": 1
    }
  }
}
